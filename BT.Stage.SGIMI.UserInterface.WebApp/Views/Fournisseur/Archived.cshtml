@model IEnumerable<BT.Stage.SGIMI.UserInterface.ViewModel.FournisseurViewModel>
@{
    ViewBag.Title = "FournisseurArchived";
}
<br />
<form class="navbar-form navbar-right">
    <a class="btn btn-warning" href="@Url.Action("DynamicReportsArchived","Fournisseur")"><i class="fa fa-plus-square"></i>Télecharger archivés fournisseurs</a>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiteWeb)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderByDescending(item => item.CreatedTime))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiteWeb)
            </td>

            <td>
                <a class="btn btn-info" href="@Url.Action("Details","Fournisseur", new { id = item.Id })"><i class="fa fa-plus-square"></i>Détails</a>
                <a class="btn btn-success" href="@Url.Action("Activer","Fournisseur", new { id = item.Id })"><i class="fa fa-plus-square"></i>Activer</a>
                <a class="btn btn-warning" href="@Url.Action("DynamicReport","Fournisseur", new { id = item.Id })"><i class="fa fa-plus-square"></i>Télecharger Contrat</a>
            </td>
        </tr>
    }

</table>
