@model IEnumerable<BT.Stage.SGIMI.UserInterface.ViewModel.FournisseurViewModel>

@{
    ViewBag.Title = "Fournisseur";
}

<h2>Liste des fournisseurs actives</h2>

<p>
    @Html.ActionLink("Ajouter un nouveau fournisseur", "Create")|
    @Html.ActionLink("liste des fournisseurs archivés", "Archived")|
    @Html.ActionLink("Telecharger la liste des fournisseurs actives ", "DynamicReports")

</p>


<p>
    @using (Html.BeginForm("Index", "Fournisseur", FormMethod.Get))
    {
        <b> Chercher par : </b> @Html.RadioButton("SearchBy", "Nom",true) <text> Nom </text>
        @Html.RadioButton("SearchBy", "Adresse") <text> Adresse </text>
        @Html.TextBox("Search") <input type="submit" value="Search" /> 


    }
        @*<button type="submit" class="glyphicon glyphicon-search" aria-hidden="true"></button>*@


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telephone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fax)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adresse)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.SiteWeb)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model.OrderByDescending(item => item.CreatedTime))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fax)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adresse)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.SiteWeb)
                    </td>

                    <td>
                        @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Détails", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Archiver", "Archiver", new { id = item.Id }) |
                        @Html.ActionLink("Télecharger Contrat ", "DynamicReport", new { id = item.Id })

                    </td>

                </tr>
            }

        </table>
