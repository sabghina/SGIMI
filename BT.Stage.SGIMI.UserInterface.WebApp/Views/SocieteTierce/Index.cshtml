@model IEnumerable<BT.Stage.SGIMI.UserInterface.ViewModel.SocieteTierceViewModel>
@{
    ViewBag.Title = "ActiveSocieteTierce";
}
<br />
<br />
<p>
    @Html.ActionLink("Telecharger la liste des sociétés tierces actives", "DynamicReports")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresse)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.SiteWeb)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.OrderByDescending(item => item.CreatedTime))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SiteWeb)
            </td>

            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Détails", "Details", new { id = item.Id })|
                @Html.ActionLink("Archiver", "Archiver", new { id = item.Id }) |
                @Html.ActionLink("Télecharger Contrat ", "DynamicReport", new { id = item.Id })

            </td>
        </tr>
    }

</table>
