@model IEnumerable<BT.Stage.SGIMI.UserInterface.ViewModel.InterventionViewModel>
@{
    ViewBag.Title = "Ajout d'une intervention";
}
<h2>Liste des interventions en cours</h2>

<p>
    @Html.ActionLink("liste des interventions annulées", "Canceled")|
    @Html.ActionLink("liste des interventions terminées", "Finished")|
    @Html.ActionLink("Telecharger la liste des interventions en cours", "DynamicReportsInProgress")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Reclamation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nature)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Etat)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model.OrderByDescending(item => item.CreatedTime))
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Reclamation)
    </td>
   
    <td>
        @Html.DisplayFor(modelItem => item.Type)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nature)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Etat)
    </td>
    
    <td>
        @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Détails", "Details", new { id = item.Id }) |
        @Html.ActionLink("Terminer", "Terminer", new { id = item.Id }) |
        @Html.ActionLink("Annuler", "Annuler", new { id = item.Id }) |
        @Html.ActionLink("Télecharger Détails ", "DynamicReport", new { id = item.Id })
    </td>
</tr>
    }

</table>
