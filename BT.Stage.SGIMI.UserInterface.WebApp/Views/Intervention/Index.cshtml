@model IEnumerable<BT.Stage.SGIMI.UserInterface.ViewModel.InterventionViewModel>
@{
    ViewBag.Title = "Ajout d'une intervention";
}
<h2>Liste des interventions</h2>

<p>
    @Html.ActionLink("Telecharger un rapport dynamique", "DynamicReports")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nature)
<a href="~/Views/Intervention/Create.cshtml">~/Views/Intervention/Create.cshtml</a>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Etat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reclamation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProblemeConstate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TraveauxEffectues)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reclamation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProblemeConstate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TraveauxEffectues)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
                @Html.ActionLink("Télecharger un rapport dynamique ", "DynamicReport", new { id = item.Id })
            </td>
        </tr>
    }

</table>
