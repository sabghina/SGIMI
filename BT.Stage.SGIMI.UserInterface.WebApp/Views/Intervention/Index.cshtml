@model IEnumerable<BT.Stage.SGIMI.UserInterface.ViewModel.InterventionViewModel>
@{
    ViewBag.Title = "InterventionEnCours";
}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: center;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }

    th {
        background-color: white;
        color: black;
    }

    h2 {
        font-style: oblique;
    }
</style>
<h2>Liste des interventions en cours</h2>
<form class="navbar-form navbar-right">
    <a class="btn btn-primary" href="@Url.Action("DynamicReportsInProgress","Reclamation")"><i class="fa fa-plus-square"></i>Télecharger interventions en cours</a>
</form>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Reclamation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nature)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Etat)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.OrderByDescending(item => item.CreatedTime))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Reclamation)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etat)
            </td>

            <td>
                <a class="btn btn-info" href="@Url.Action("Edit","Reclamation", new { id = item.Id })"><i class="fa fa-plus-square"></i>Modifier</a>
                <a class="btn btn-info" href="@Url.Action("Details","Reclamation", new { id = item.Id })"><i class="fa fa-plus-square"></i>Détails</a>
                <a class="btn btn-info" href="@Url.Action("Terminer","Reclamation", new { id = item.Id })"><i class="fa fa-plus-square"></i>Terminer</a>
                <a class="btn btn-success" href="@Url.Action("Annuler","Intervention", new { id = item.Id })"><i class="fa fa-plus-square"></i>Annuler</a>
                <a class="btn btn-primary" href="@Url.Action("DynamicReport","Reclamation", new { id = item.Id })"><i class="fa fa-plus-square"></i>Télecharger détails</a>

            </td>
        </tr>
    }

</table>
