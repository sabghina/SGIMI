@model IEnumerable<BT.Stage.SGIMI.UserInterface.ViewModel.MaterielViewModel>
@{
    ViewBag.Title = "Materiel";
}

<h2>Liste des matériels affectés</h2>

<p>
    @Html.ActionLink("Retour", "Index")|
    @Html.ActionLink("Telecharger la liste des matériels affectés ", "DynamicReports")|

</p>
<form class="navbar-form navbar-left" role="search">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Chercher un materiel">
    </div>
    <button type="submit" class="glyphicon glyphicon-search" aria-hidden="true"></button>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modele)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReferenceBT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroDeSerie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Etat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Statut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fournisseur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Agent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderByDescending(item => item.CreatedTime))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modele)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceBT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDeSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fournisseur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Agent)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Détails", "Details", new { id = item.Id }) |
                @Html.ActionLink("Retirer", "Retirer", new { id = item.Id }) |
                <a href="@Url.Action("Create","Reclamation",new { materiel = item.Id })"> Reclamer </a>|
                @Html.ActionLink("Télecharger Contrat ", "DynamicReport", new { id = item.Id })
            </td>
        </tr>
    }

</table>
