@model IEnumerable<BT.Stage.SGIMI.UserInterface.ViewModel.MaterielViewModel>

@{
    ViewBag.Title = "MaterielNoAffected";
}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
        border-style: solid;
    }

    th, td {
        text-align: center;
        padding: 8px;
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }

    th {
        background-color: white;
        color: black;
    }

    h2 {
        font-style: oblique;
        color: white;
    }
</style>

<div class="row">
    <div class="col-lg-6 col-md-6">
        <h2>Liste des matériels non affectés</h2>
    </div>
    <div class="col-lg-6 col-md-6">
        <a class="btn btn-primary navbar-right" style="margin-top: 3%;" href="@Url.Action("DynamicReportsNoAffected","Materiel")"><i class="fa fa-plus-square"></i>Télecharger la liste des matériels non affectés</a>

    </div>
</div>

<hr />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modele)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReferenceBT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroDeSerie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fournisseur)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.OrderByDescending(item => item.CreatedTime))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modele)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceBT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDeSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fournisseur)
            </td>

            <td>
                <a class="btn btn-success btn-sm" href="@Url.Action("Edit","Materiel", new { id = item.Id })"><i class="fa fa-plus-square"></i>Modifier</a>
                <a class="btn btn-info btn-sm" href="@Url.Action("Details","Materiel", new { id = item.Id })"><i class="fa fa-plus-square"></i>Détails</a>
                <a class="btn btn-success btn-sm" href="@Url.Action("Filtrer","Materiel", new { id = item.Id })"><i class="fa fa-plus-square"></i>Affecter</a>
                <a class="btn btn-danger btn-sm" href="@Url.Action("Archiver","Materiel", new { id = item.Id })"><i class="fa fa-plus-square"></i>Archiver</a>
                <a class="btn btn-primary btn-sm" href="@Url.Action("DynamicReport","Materiel", new { id = item.Id })"><i class="fa fa-plus-square"></i>Télecharger Contrat</a>

            </td>
        </tr>
    }

</table>
