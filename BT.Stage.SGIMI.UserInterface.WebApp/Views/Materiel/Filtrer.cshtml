@model BT.Stage.SGIMI.UserInterface.ViewModel.AffectationMaterielViewModel
<style>

    h2 {
        color:white;
        font-style:oblique;
       }
</style>

<h2>Choisir une unité gestion</h2>

@using (Html.BeginForm("Filtrer","Materiel",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.UniteGestion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.UniteGestion, Model.UniteGestions, "-----", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UniteGestion, "", new { @class = "text-danger" })
            </div>
        </div>
        <br /><br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Filtrer" class="btn btn-success" />
                <a class="btn btn-danger" href="@Url.Action("Index","Materiel")"><i class="fa fa-plus-square"></i>Retour</a>
            </div>
        </div>
    </div>
}

