@model BT.Stage.SGIMI.UserInterface.ViewModel.AffectationMaterielViewModel
    @{ 
        List<SelectListItem> ListUnité = new List<SelectListItem>();
        ListUnité.Add(new SelectListItem
        {
            Text = "Siége",
            Value = "Siége",

        });
        ListUnité.Add(new SelectListItem
        {
            Text = "Agence",
            Value = "Agence",

        });
    }

@using (Html.BeginForm("Affecter","Materiel",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Affectation du materiel @Model.Id</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.Agent, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Agent, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Agent, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Unité, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Unité, ListUnité, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.Unité, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Affecter" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
