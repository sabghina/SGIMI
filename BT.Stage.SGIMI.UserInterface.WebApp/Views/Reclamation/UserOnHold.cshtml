@model IEnumerable<BT.Stage.SGIMI.UserInterface.ViewModel.ReclamationViewModel>
@{
    ViewBag.Title = "Mes réclamations en attente";
}
<br />
<form class="navbar-form navbar-right">
    <a class="btn btn-primary" href="@Url.Action("DynamicReportsOnHold","Reclamation")"><i class="fa fa-plus-square"></i>Télecharger réclamations en attentes</a>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Materiel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Etat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Probleme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Commentaire)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UniteGestion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderByDescending(item => item.CreatedTime))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Materiel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Probleme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Commentaire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UniteGestion)
            </td>
            <td>
                <a class="btn btn-info" href="@Url.Action("Edit","Reclamation", new { id = item.Id })"><i class="fa fa-plus-square"></i>Modifier</a>
                <a class="btn btn-info" href="@Url.Action("Details","Reclamation", new { id = item.Id })"><i class="fa fa-plus-square"></i>Détails</a>
                <a class="btn btn-info" href="@Url.Action("Annuler","Reclamation", new { id = item.Id })"><i class="fa fa-plus-square"></i>Annuler</a>
                @if ((Request.IsAuthenticated) && (User.IsInRole("admin")))
                {
                    <a class="btn btn-success" href="@Url.Action("Create","Intervention", new { id = item.Id })"><i class="fa fa-plus-square"></i>Intervenir</a>
                }
            <a class="btn btn-primary" href="@Url.Action("DynamicReport","Reclamation", new { id = item.Id })">
                <i class="fa fa-plus-square"></i>Télecharger détails
            </a>

            </td>
        </tr>
    }

</table>
