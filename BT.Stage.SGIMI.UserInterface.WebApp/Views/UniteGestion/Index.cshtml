@model IEnumerable<BT.Stage.SGIMI.UserInterface.ViewModel.UniteGestionViewModel>
@{
    ViewBag.Title = "Unité Gestion";
}
<br />
<form class="navbar-form navbar-right">
    <a class="btn btn-primary" href="@Url.Action("DynamicReports","UniteGestion")"><i class="fa fa-plus-square"></i>Télecharger la liste des unités gestions</a>
</form>
@Html.ActionLink("Ajouter une nouvelle unite Gestion ", "Create")|
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresse)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>

            <td>
                <a class="btn btn-info" href="@Url.Action("Details","UniteGestion", new { id = item.Id })"><i class="fa fa-plus-square"></i>Détails</a>
                <a class="btn btn-success" href="@Url.Action("Edit","UniteGestion", new { id = item.Id })"><i class="fa fa-plus-square"></i>Modifier</a>
                <a class="btn btn-primary" href="@Url.Action("DynamicReport","UniteGestion", new { id = item.Id })"><i class="fa fa-plus-square"></i>Télecharger rapport</a>
                
            </td>
        </tr>
    }

</table>
