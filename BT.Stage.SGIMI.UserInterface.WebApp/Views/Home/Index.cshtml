@{
    ViewBag.Title = "Home Page";
}
<br />
<div class="jumbotron">
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <div id="chartContainer" style="height: 340px; width: 100%;"></div>
        </div>
        <div class="col-lg-6 col-md-6">
            <div id="chartContainer2" style="height: 340px; width: 100%;"></div>
        </div>
    </div>
	<br />
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <div id="chartContainer1" style="height: 340px; width: 100%;"></div>
        </div>
        <div class="col-lg-6 col-md-6">
            <div id="chartContainer3" style="height: 340px;width: 100%;"></div>
        </div>
		</div>
</div>

    @section scripts{
        <script type="text/javascript" src="~/Scripts/canvajs-2.3.2/canvasjs.min.js"></script>
        <script type="text/javascript">
		window.onload = function () {


			var chart = new CanvasJS.Chart("chartContainer", {
				theme: "light1", // "light1", "light2", "dark1", "dark2"
				exportEnabled: true,
				animationEnabled: true,
				zoomEnabled: true,
				subtitles: [{
					text: "Nombre Reclamation Par Date"
				}],
				data: [{
					type: "pie",
					startAngle: 180,
					toolTipContent: "<b>{label}</b> = {y}",
					showInLegend: "true",
                    legendText: "{y}",
					indexLabel: "",
					dataPoints: @Html.Raw(ViewBag.NombreReclamationParDate)
	            }]

			});
			chart.render();

			var chart2 = new CanvasJS.Chart("chartContainer1", {
				theme: "light1", // "light1", "light2", "dark1", "dark2"
				exportEnabled: true,
				animationEnabled: true,
				zoomEnabled: true,
				subtitles: [{
					text: "Nombre Reclamation Par Etat"
				}],
				data: [{
					type: "column",
					startAngle: 180,
					toolTipContent: "<b>{label}</b> = {y}",
					showInLegend: "true",
                    legendText: "Nombre Reclamation Par Etat",
					indexLabel: "",
					dataPoints: @Html.Raw(ViewBag.NombreReclamationParEtat)
	            }]
			});
			chart2.render();
			var chart3 = new CanvasJS.Chart("chartContainer2", {
				theme: "light1", // "light1", "light2", "dark1", "dark2"
				exportEnabled: true,
				animationEnabled: true,
				zoomEnabled: true,
				subtitles: [{
                    text: "Nombre Intervention Par Date"
				}],
				data: [{
					type: "pie",
					startAngle: 180,
					toolTipContent: "<b>{label}</b> = {y}",
					showInLegend: "true",
                    legendText: "{y}",
					indexLabel: "",
					dataPoints: @Html.Raw(ViewBag.NombreInterventionParDate)
	            }]
			});
			chart3.render();
			var chart4 = new CanvasJS.Chart("chartContainer3", {
				theme: "light3", // "light1", "light2", "dark1", "dark2"
				exportEnabled: true,
				animationEnabled: true,
				subtitles: [{
					text: "Interventions par etat"
				}],
				data: [{
					type: "column",
					startAngle: 180,
					toolTipContent: "<b>{label}</b>: {y}",
					showInLegend: "true",
					legendText: "{label}",
					indexLabel: "",
					dataPoints: @Html.Raw(ViewBag.NombreInterventionParEtat)
	}]
			});
            chart4.render();

		}
        </script>
    }
