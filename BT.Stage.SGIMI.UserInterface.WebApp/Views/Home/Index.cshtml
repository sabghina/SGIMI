@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">


    <div id="chartContainer" style="height: 370px; width: 100%;"></div>
    <div id="chartContainer2" style="height: 370px; width: 100%;"></div>
    <div id="chartContainer3" style="height: 370px; width: 100%;"></div>
</div>

@section scripts{
    <script type="text/javascript" src="~/Scripts/canvajs-2.3.2/canvasjs.min.js"></script>
    <script type="text/javascript">
window.onload = function () {

var chart = new CanvasJS.Chart("chartContainer", {
	theme: "light1", // "light1", "light2", "dark1", "dark2"
	exportEnabled: true,
	animationEnabled: true,
	title: {
		text: "Statistiques des reclamations"
	},
	subtitles: [{
		text: "Banque de tunisie, 2020"
	}],
	data: [{
		type: "bar",
		startAngle: 180,
		toolTipContent: "<b>{label}</b>:{y}%",
		showInLegend: "true",
		legendText: "{label}",
		indexLabel: "{label} - {y}%",
		dataPoints: @Html.Raw(ViewBag.ReclamationParService)
	}]
});
chart.render();

var chart2 = new CanvasJS.Chart("chartContainer2", {
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	exportEnabled: true,
	animationEnabled: true,
	subtitles: [{
        text: "Etat materiel"
	}],
	data: [{
		type: "line",
		startAngle: 180,
		toolTipContent: "<b>{label}</b>:{y}%",
		showInLegend: "true",
		legendText: "{label}",
		indexLabel: "{label} - {y}%",
		dataPoints: @Html.Raw(ViewBag.EtatMateriel)
	}]
});
chart2.render();
var chart3 = new CanvasJS.Chart("chartContainer3", {
	theme: "light3", // "light1", "light2", "dark1", "dark2"
	exportEnabled: true,
	animationEnabled: true,
	subtitles: [{
		text: "Reclamation par unité gestion"
	}],
	data: [{
		type: "pie",
		startAngle: 180,
		toolTipContent: "<b>{label}</b>: {y}%",
		showInLegend: "true",
		legendText: "{label}",
		indexLabel: "{label} - {y}%",
		dataPoints: @Html.Raw(ViewBag.ReclamationParUniteGestion)
	}]
});
chart3.render();

}
    </script>
}