        <div class="user-box" style="margin-left: 5%;">
            @*<div class="form-group">*@


            @*<div class="col-md-10">*@
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-warning" ,@style = "font-weight:bold;" })
            @*</div>*@
            @*</div>*@
        </div>
        @*<div class="form-group">*@

        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" ,@style="width:150px; text-align: left;"})
        <div class="user-box" style="margin-left: 5%;">
            @*<div class="col-md-10">*@
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            @*</div>*@
        </div>
        @*</div>*@

        @*<div class="form-group">*@
        @*<div class="col-md-offset-2 col-md-10">*@
        <div class="checkbox" style="margin-left: 12%; color:white;">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </div>
        @*</div>*@
        @*</div>*@
        @*<div class="form-group">
            <div class="col-md-offset-2 col-md-10">*@
<br />
<p>
    <center> <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in" aria-hidden="true"></i> Se connecter</button></center>
</p>
<p>
 <center>@Html.ActionLink("S'inscrire", "Register")</center>
</p>
